package prob_1;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		// 스캐너 생성
		Scanner in = new Scanner(System.in);
		
		try
		{
			Prob_1 prob_1 = new Prob_1();
			// 필드 초기화
			String zeroChk = "";
			int inputNum = 1;
			boolean zeroFlag = false;
			
			System.out.print("숫자 입력 : ");
			inputNum = in.nextInt();
			
			while (true) 
			{
				inputNum += 1;
				zeroChk = inputNum + "";
				
				// 입력받은 숫자에 0이 있는지 체크
				for (int i = 0; i < zeroChk.length(); i++) 
				{
					if ('0' == zeroChk.charAt(i)) 
					{
						zeroFlag = true;
						break;
					} // end of if
					else
					{
						zeroFlag = false;
					} // end of else
					
				} // end of for
				
				// 입력받은 숫자에 0이 없으면 탈출
				if (false == zeroFlag) 
				{
					break;
				} // end of if
				
			} // end of while
			
			System.out.println("다음 수 : " + inputNum);                                           
			
			// 스캐너 종료
			in.close();
		} // end of try

		catch (Exception e)
		{
			e.printStackTrace();
			// 스캐너 종료
			in.close();
		} // end of catch
	}

}
